{
  "title": "Comprehensive Golf Course Schema.org Structured Data",
  "description": "Complete JSON-LD markup templates for golf course SEO pages",
  "schemas": {
    "1_LocalBusiness_GolfCourse": {
      "description": "Primary schema combining LocalBusiness and GolfCourse types",
      "priority": "CRITICAL",
      "jsonld": {
        "@context": "https://schema.org",
        "@type": ["LocalBusiness", "GolfCourse"],
        "id": "https://example.com/#golf-course",
        "name": "Pebble Beach Golf Links",
        "url": "https://example.com",
        "description": "Championship 18-hole golf course featuring stunning ocean views on the Monterey Peninsula",
        "telephone": "+1-831-622-8723",
        "email": "reservations@pebblebeach.com",
        "image": [
          "https://example.com/images/pebble-beach-hero.jpg",
          "https://example.com/images/clubhouse.jpg",
          "https://example.com/images/hole-18.jpg"
        ],
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "1518 8th Avenue",
          "addressLocality": "Pebble Beach",
          "addressRegion": "CA",
          "postalCode": "93953",
          "addressCountry": "US"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 36.5625,
          "longitude": -121.9496
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            "opens": "07:00",
            "closes": "18:00"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Saturday", "Sunday"],
            "opens": "06:00",
            "closes": "18:00"
          }
        ],
        "acceptsReservations": true,
        "priceRange": "$$$",
        "sameAs": [
          "https://www.facebook.com/pebblebeach",
          "https://www.instagram.com/pebblebeach",
          "https://twitter.com/pebblebeach"
        ],
        "founder": "Jack Neville, Douglas Grant",
        "foundingDate": "1919",
        "hasMap": "https://goo.gl/maps/pebblebeach",
        "amenityFeature": [
          {
            "@type": "LocationFeatureSpecification",
            "name": "Full Service Pro Shop"
          },
          {
            "@type": "LocationFeatureSpecification",
            "name": "Golf Instruction Available"
          },
          {
            "@type": "LocationFeatureSpecification",
            "name": "Restaurant & Bar"
          },
          {
            "@type": "LocationFeatureSpecification",
            "name": "Golf Cart Rental"
          },
          {
            "@type": "LocationFeatureSpecification",
            "name": "Handicap Accessible"
          }
        ],
        "additionalProperty": [
          {
            "@type": "PropertyValue",
            "name": "Par",
            "value": "72"
          },
          {
            "@type": "PropertyValue",
            "name": "Holes",
            "value": "18"
          },
          {
            "@type": "PropertyValue",
            "name": "Course Rating",
            "value": "73.5"
          },
          {
            "@type": "PropertyValue",
            "name": "Slope Rating",
            "value": "145"
          },
          {
            "@type": "PropertyValue",
            "name": "Course Architect",
            "value": "Jack Neville, Douglas Grant"
          },
          {
            "@type": "PropertyValue",
            "name": "Established",
            "value": "1919"
          }
        ]
      }
    },
    "2_SportsActivityLocation": {
      "description": "Enhanced SportsActivityLocation schema with more golf-specific properties",
      "priority": "HIGH",
      "jsonld": {
        "@context": "https://schema.org",
        "@type": "SportsActivityLocation",
        "name": "Pebble Beach Golf Links",
        "url": "https://example.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "1518 8th Avenue",
          "addressLocality": "Pebble Beach",
          "addressRegion": "CA",
          "postalCode": "93953",
          "addressCountry": "US"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 36.5625,
          "longitude": -121.9496
        },
        "sportsActivityLocation": {
          "@type": "SportsActivityLocation",
          "name": "Championship Course"
        },
        "numberOfHoles": 18,
        "courseSpecifications": {
          "@type": "Thing",
          "par": 72,
          "courseRating": 73.5,
          "slopeRating": 145
        },
        "guestCanBringOwnEquipment": true,
        "equipmentRental": {
          "@type": "Thing",
          "name": "Golf Clubs",
          "availability": "https://schema.org/InStock"
        }
      }
    },
    "3_AggregateRating": {
      "description": "Review and rating aggregation schema",
      "priority": "HIGH",
      "notes": "Only include ratings from reviews hosted on your own website",
      "jsonld": {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Pebble Beach Golf Links",
        "url": "https://example.com",
        "image": "https://example.com/images/pebble-beach.jpg",
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.7",
          "bestRating": "5",
          "worstRating": "1",
          "ratingCount": 328,
          "reviewCount": 248,
          "name": "Pebble Beach Golf Links Reviews"
        },
        "review": [
          {
            "@type": "Review",
            "headline": "Spectacular course with world-class service",
            "reviewBody": "Had an amazing experience playing Pebble Beach. The course condition was immaculate, the views were stunning, and the staff was exceptional. Highly recommend for any serious golfer.",
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "5",
              "bestRating": "5",
              "worstRating": "1"
            },
            "datePublished": "2026-01-05",
            "author": {
              "@type": "Person",
              "name": "John Smith"
            }
          },
          {
            "@type": "Review",
            "headline": "Pricey but worth it for a bucket list course",
            "reviewBody": "Beautiful course with incredible oceanfront holes. The green fees are premium but you're getting a legendary experience. Booking is competitive, but once you get on, it's unforgettable.",
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "4",
              "bestRating": "5",
              "worstRating": "1"
            },
            "datePublished": "2026-01-02",
            "author": {
              "@type": "Person",
              "name": "Sarah Johnson"
            }
          }
        ]
      }
    },
    "4_EventSchema_TeeTimes": {
      "description": "Event schema for tee time bookings and tournaments",
      "priority": "MEDIUM",
      "notes": "Use this for specific tee time slots and golf tournaments",
      "examples": [
        {
          "type": "Standard Tee Time",
          "jsonld": {
            "@context": "https://schema.org",
            "@type": "SportsEvent",
            "name": "Golf Tee Time - Pebble Beach Golf Links",
            "description": "18-hole championship round at Pebble Beach Golf Links",
            "startDate": "2026-01-15T08:00:00-08:00",
            "endDate": "2026-01-15T12:00:00-08:00",
            "eventStatus": "https://schema.org/EventScheduled",
            "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
            "location": {
              "@type": "GolfCourse",
              "name": "Pebble Beach Golf Links",
              "address": {
                "@type": "PostalAddress",
                "streetAddress": "1518 8th Avenue",
                "addressLocality": "Pebble Beach",
                "addressRegion": "CA",
                "postalCode": "93953",
                "addressCountry": "US"
              }
            },
            "offers": {
              "@type": "Offer",
              "url": "https://example.com/book-tee-time?date=2026-01-15&time=0800",
              "price": "550.00",
              "priceCurrency": "USD",
              "availability": "https://schema.org/InStock",
              "availabilityEnds": "2026-01-15T08:00:00-08:00",
              "validFrom": "2026-01-01T00:00:00Z"
            },
            "organizer": {
              "@type": "Organization",
              "name": "Pebble Beach Golf Links",
              "url": "https://example.com",
              "telephone": "+1-831-622-8723"
            },
