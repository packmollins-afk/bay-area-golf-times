  "combined_implementation": {
    "description": "Complete example of all schemas combined on a single page",
    "notes": "This is the recommended approach - include all schemas on the course detail page",
    "html_structure": "<head>\n  <!-- Schema 1: Combined LocalBusiness + GolfCourse -->\n  <script type=\"application/ld+json\">\n  { LocalBusiness_GolfCourse schema }\n  </script>\n\n  <!-- Schema 2: AggregateRating -->\n  <script type=\"application/ld+json\">\n  { AggregateRating schema }\n  </script>\n\n  <!-- Schema 3: BreadcrumbList -->\n  <script type=\"application/ld+json\">\n  { BreadcrumbList schema }\n  </script>\n\n  <!-- Schema 4: Event (Tee Times) - Optional, include on booking pages -->\n  <script type=\"application/ld+json\">\n  { SportsEvent schema }\n  </script>\n</head>"
  },
  "implementation_guidelines": {
    "1_LocalBusiness_GolfCourse": {
      "required_properties": [
        "name",
        "address (full PostalAddress)",
        "telephone",
        "url",
        "geo (latitude, longitude)"
      ],
      "recommended_properties": [
        "image (hero image, 1200x628px minimum)",
        "openingHoursSpecification",
        "aggregateRating",
        "review",
        "email",
        "sameAs (social profiles)",
        "amenityFeature",
        "additionalProperty (par, slope, rating)"
      ],
      "best_practices": [
        "Use exact name matching Google Business Profile",
        "Ensure coordinates pin the clubhouse entrance",
        "Include high-quality hero image",
        "List all holes and course specifications",
        "Link directly to online booking system",
        "Keep in sync with Google Business Profile data"
      ]
    },
    "2_AggregateRating": {
      "required_properties": [
        "ratingValue",
        "bestRating",
        "worstRating",
        "ratingCount"
      ],
      "recommended_properties": [
        "reviewCount",
        "review (individual review items)",
        "name"
      ],
      "critical_warning": "ONLY include reviews hosted on your own website. Do not mark up third-party reviews from Google, Yelp, or other platforms.",
      "validation": "Test in Google Rich Results Test tool to ensure eligibility"
    },
    "3_SportsActivityLocation": {
      "when_to_use": "When you want to emphasize golf-specific activities and equipment",
      "can_combine_with": "LocalBusiness type in same schema",
      "golf_specific_properties": [
        "numberOfHoles",
        "courseRating",
        "par",
        "slopeRating",
        "guestCanBringOwnEquipment",
        "equipmentRental"
      ]
    },
    "4_BreadcrumbList": {
      "recommended_depth": "3-5 levels deep",
      "position_numbering": "Must start at 1 and increment sequentially",
