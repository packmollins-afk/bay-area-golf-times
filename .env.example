# Golf The Bay - Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# REQUIRED - Security
# =============================================================================

# Admin password for accessing /admin endpoints (REQUIRED, no default)
ADMIN_PASSWORD=your-secure-admin-password-here

# JWT secret for signing admin session tokens (REQUIRED, no default)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-64-char-random-secret-here

# =============================================================================
# REQUIRED - Database
# =============================================================================

# Turso database connection
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# =============================================================================
# OPTIONAL - Features
# =============================================================================

# Email service (Resend) - if not set, verification emails won't be sent
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=Golf The Bay <noreply@golfthebay.com>

# Primary domain (for email links during migration)
PRIMARY_DOMAIN=golfthebay.com

# =============================================================================
# DEPRECATED - Legacy Migration (will be removed)
# =============================================================================

# Legacy password salt - only needed if migrating users from old SHA-256 hashes
# LEGACY_PASSWORD_SALT=baygolf_salt_2024

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Node environment
NODE_ENV=development

# Port for local development
PORT=3000
