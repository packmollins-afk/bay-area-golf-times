{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["data/**", "src/db/**", "src/scrapers/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/course/([^/]+)",
      "dest": "public/course.html"
    },
    {
      "src": "/admin",
      "dest": "public/admin.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}
